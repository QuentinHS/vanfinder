<% content_for :primary_content do %>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Postcode</th>
      <th>Sold</th>
      <th>Description</th>
      <th>User</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        
        <td><%= cl_image_tag listing.listing_image.key, crop: :scale,width: 50, cloud_name: ENV['CLOUDINARY_CLOUD_NAME']  if listing.listing_image.attached? %></td>
        <td><%= listing.postcode %></td>
        <td><%= listing.sold %></td>
        <td><%= listing.description %></td>
        <td><%= listing.user_id %></td>
        <td><%= listing.price %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<% if policy(Listing).new? %>

  <% content_for :secondary_content do %>
    <%= link_to 'New Listing', new_listing_path %>
  <% end %>
  
<% end %>

<%= render "shared/basic_layout" %>