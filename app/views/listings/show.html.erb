<p id="notice"><%= notice %></p>

<% if @listing.listing_image.attached? %>
   <p>
      <%= image_tag @listing.listing_image, width: 150 
       %>
  </p>

<%= end %>

<p>
  <strong>Postcode:</strong>
  <%= @listing.postcode %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
  <%= link_to 'Delete', @listing, method: :delete, data: { confirm: "Are you sure that you want to delete this listing? "} %> |
<% end %>
<%= link_to '<< Back to listings', listings_path %>
 