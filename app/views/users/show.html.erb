<nav class="bg-white px-6 py-3 border-box">
  <ul id="nav-tab" class="list-none p-0 profile-tabs">
    <li class="inline-block mr-2 active">
      <%= link_to "Listings", "#profile_listings", class: "link font-medium hover:text-purple-500 py-3 text-sm" %>
    </li>

</nav>

<div class="p-4 text-center">
  <h4><%= @user.username %></h4>
    <div class="italic text-sm text-gray-600">Joined <%= time_ago_in_words(@user.created_at) %> ago</div>

    <% if user_signed_in? %>
      <%= link_to "New Listing", new_listing_path, class: "btn btn-purple btn-small w-full block my-2" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn btn-white btn-small w-full block my-2" %>
      <%= link_to "Sign Up", new_user_session_path, class: "btn btn-purple btn-small w-full block my-2" %>
    <% end %>
  </div>